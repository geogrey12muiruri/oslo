datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  STUDENT
  LECTURER
  HOD
  ADMIN
  REGISTRAR
  STAFF
  SUPER_ADMIN
  AUDITOR_GENERAL  
}

model User {
  id        String    @id @default(uuid()) // UUID for consistency
  email     String    @unique
  password  String    // Hashed in app logic
  role      UserRole
  verified  Boolean   @default(false)
  tenantId  String
  tenant    Tenant    @relation(fields: [tenantId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  refreshTokens RefreshToken[]
}

model RefreshToken {
  id        String    @id @default(uuid())
  token     String    @unique
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  expiresAt DateTime
  createdAt DateTime  @default(now())
}

model Tenant {
  id                 String    @id @default(uuid())
  name               String
  domain             String
  logoUrl            String?
  address            String?
  city               String?
  country            String?
  phone              String?
  email              String?
  type               InstitutionType
  accreditationNumber String?
  establishedYear    Int?
  timezone           String?
  currency           String?
  status             InstitutionStatus
  createdBy          String
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  users              User[]
}

enum InstitutionType {
  PUBLIC
  PRIVATE
}

enum InstitutionStatus {
  ACTIVE
  INACTIVE
}