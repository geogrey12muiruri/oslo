generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AuditProgram {
  id           String   @id
  name         String
  description  String?
  status       String   @default("Draft")
  priority     String
  startDate    DateTime
  endDate      DateTime
  modules      String[] // Targeted scopes as an array
  objectives   String
  methods      String[] // Audit methods as an array
  criteria     String[] // Audit criteria as an array
  milestones   Json     // Store milestones as JSON (array of {name, date})
  teams        Json     // Store teams as JSON (array of {name, leader, members})
  createdAt    DateTime @default(now())
}